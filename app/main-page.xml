<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="Календарь" icon=""/>
    <StackLayout >
        <GridLayout rows="auto" columns="*, auto, *"  orientation="horizontal">
            <Button class="next" text="<" tap="{{prev}}" row="0" col="0"/>
            <Button class="next" text="Сегодня" tap="{{today}}" row="0" col="1"/>
            <Button class="next" text=">" tap="{{next}}" row="0" col="2"/>
        </GridLayout>
        <Label class="today" text="{{monthName}}" />
        <GridLayout rows="*, *, *, *, *, *, *" columns="*, *, *, *, *, *, *" loaded="{{loadedGrid}}"> 
        </GridLayout>
    </StackLayout>
</Page>
