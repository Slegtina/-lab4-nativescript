<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="Календарь" icon=""/>
    <FlexboxLayout flexDirection="column" >
        <StackLayout orientation="horizontal">
            <Button class="next" text="<" tap="{{prev}}"/>
            <Button class="next" text="Сегодня" tap="{{today}}"/>
            <Button class="next" text=">" tap="{{next}}"/>
        </StackLayout>
        <Label class="today" text="{{monthName}}" />
        <GridLayout rows="auto, auto, auto, auto, auto, auto, auto" columns="auto, auto, auto, auto, auto, auto, auto" loaded="{{loadedGrid}}">  
        </GridLayout>
    </FlexboxLayout>
</Page>
